<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefFragment" parent="AppTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="LargeText" parent="AppTheme">
        <item name="android:textColor">@color/gray100</item>
        <item name="android:textSize">@dimen/text_extra_large</item>
    </style>

    <style name="DefBtn" parent="AppTheme">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
    </style>

    <style name="DefBtn.Primary" parent="DefBtn">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn_primary</item>
    </style>
</resources>
